[mysqld]
datadir=<%= node['tungsten']['mysqlDataDir'] -%>

pid-file=<%= node['tungsten']['mysqlPIDFile'] -%>

socket=<%= node['tungsten']['mysqlSocket'] -%>

port=<%= node['tungsten']['repPort'] -%>

user=mysql
symbolic-links=0
default-storage-engine=innodb
log-bin=mysql-bin
server-id=<%= node['tungsten']['mysqlServerID'] -%>


# Preferred Tungsten settings
sync_binlog=2
max_allowed_packet=52m
open_files_limit=65535
max_connections=151

# Settings to properly support multi-master topologies
binlog_format=<%= node['tungsten']['mysqlBinlogFormat'] -%>

auto_increment_increment=<%= node['tungsten']['mysqlIncrement'] -%>

auto_increment_offset=<%= node['tungsten']['mysqlOffset'] -%>


!includedir /etc/mysql/conf.d/
